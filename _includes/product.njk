---
layout: base.njk
---

{# This product page assumes a few things about each individual product #}

<main id="content">
	<h1>{{ full_name }}</h1>
	<div class="video">
	<iframe width="560" height="315" src="{{ video }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
	</iframe>
	</div>

	<div class="space"></div>
	<div class="halfpage">
		<div class="column">
			<h2>Description</h2>
			<p class="description">{{ description }}</p>
		</div>
		<div class="column">
			<div class="download">
				<a class="downstart" href="{{ download_link }}" target="_blank">
					{{ download_type }}
				</a>

				<a href="{{ guide_link }}" target="_blank">Guide</a>

				{%- if version -%}
					<button class="collapsible">Version</button>
					<div class="collap">						
						<p>{{ version }}</p>
					</div>
				{%- endif -%}

				{%- if changelog -%}
					<button class="collapsible">Changelog</button>
					<div class="collap">
						<p>{{ changelog | safe }}</p>
					</div>
				{%- endif -%}

				{%- if requirements -%}
					<button class="collapsible">Requirements</button>
					<div class="collap">
						<h2>Minimum</h2>
							{%- for req in requirements["minimum"] -%}
								<p> - {{ req }}</p>
							{%- endfor -%}
						<h2>Recommended</h2>
							{%- for req in requirements["recommended"] -%}
								<p> - {{ req }}</p>
							{%- endfor -%}
					</div>
				{%- endif -%}

				{%- if license -%}
					<button class="collapsible downend">License</button>
					<div class="collap license">
						<h2>{{ license }}</h2>
						<p>{{ license_text }}</p>
					</div>
				{%- endif -%}
			</div>
		</div>
	</div>
	<div class="space"></div>

	{% if coverimg %}
	<div class="cover">
    	<img class="covimage panels" src="/{{ coverimg }}">
	</div>
    <div class="space"></div>
	{% endif %}

	{{ content | safe }}

	{% if renders %}
		<div class="space"></div>

		{% for render in renders %}
			<div class="parallax" style="background-image: url('{{ render['path'] }}');"></div>
			<img class="par-image" src="{{ render['path'] }}" loading="lazy">
		{% endfor %}
	{% endif %}
</main>

<div class="space"></div>

<button class="collapsible comments">Comments</button>
<div class="collap1">
	<div class="disquscontainer">
		<div id="disqus_thread"></div>
	</div>
</div>

<div class="space"></div>

<script src="/scripts/collapsible.js" type="text/javascript"></script>

<a class="chat" href="javascript:void(Tawk_API.toggle())"><i class="fas fa-comment"></i></a><script src="/scripts/chat.js" type="text/javascript"></script>

<script>
(function() { // DON'T EDIT BELOW THIS LINE
var d = document, s = d.createElement('script');
s.src = '{{ comments_link }}';
s.setAttribute('data-timestamp', +new Date());
(d.head || d.body).appendChild(s);
})();
</script>
