<!doctype html>
<html lang="en">
    <head>
		<meta charset="UTF-8">
        <title>{{ title }}</title>
		<meta name="description" content="{{ description }}">

		<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="/images/logos/wolf_theme.svg" type="image/svg+xml">

        {# Shared Stylesheets #}
        <link rel="stylesheet" type="text/css" href="/styles/style_all.css">
        <link rel="stylesheet" type="text/css" href="/styles/style_color.css">

        {# Some pages require more than one stylesheet. These are listed in the `stylesheets` array in front-matter. #}
        {# See index.njk for an example. #}
        {%- for stylesheet in stylesheets -%}
            <link rel="stylesheet" type="text/css" href="{{ stylesheet }}">
        {%- endfor -%}

        {# Shared Scripts #}
        <script src="/scripts/menu_bar.js" type="text/javascript"></script>

        {# Some pages include custom scripts. Include these here #}
        {%- for script in scripts -%}
            <script src="{{ script }}"></script>
		{%- endfor -%}

    </head>
    <body>

        <header>
            <div id="section">
                <div id="menu">
                    <input id="hambmenu" type="checkbox" onclick="openMenu()">
                        <div class="hamburger"></div>
                        <div class="hamburger"></div>
                    </input>
                    <div id="links" onmouseleave="mouseOut()">
                        <ul>
                            {# Get only the end (name) of the page's url. See .eleventy.js for more info. #}
                            {%- set url -%}
                                {{- page.url | urlname -}}
                            {%- endset -%}

                            <li class="main"><a class="{% if "/" == page.url %} selected {% endif %}" href="/">Home</a></li>
                            <li class="main"><a class="{% if "products" in page.url %} selected {% endif %}" href="/products" onmouseover="mouseOver()">Products</a>

                                <ul id="submenu">
                                    {# Add each product to the navigation #}
                                    {%- for product in collections.products -%}
                                    <li>
										<a class="{% if url === product.fileSlug %} selected {% endif %}" href="{{ product.url | prettyURL }}">
										    <img src="/{{ product.data.icon }}">
										<br>{{ product.data.name }}</a>
									</li>
                                    {%- endfor -%}
                                </ul>

                            </li>
                            <li class="main"><a class="{% if "films" in page.url %} selected {% endif %}" href="/films">Films</a></li>
                            <li class="main"><a class="{% if "info" in page.url %} selected {% endif %}" href="/info">Info</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        {# Include each page's unique content #}
        {{ content | safe }}

    </body>
</html>
