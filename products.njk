---
layout: base.njk
permalink: /products.html
title: Products
description:

stylesheets: [
    "/styles/style_products.css",
    "/styles/style_color.css"
]
---

<main id="content">
	<div class="space"></div>

	{%- for product in collections.products -%}
	<a href="{{ product.url | prettyURL }}" class="{{ product.fileSlug | lower }}">
		<div class="container">
			<div class="column left">
				<img class="{{product.fileSlug | lower -}}img" src="/{{ product.data.icon }}">
			</div>
			<div class="column right">
				<h1>{{ product.data.name }}</h1>
				<p>{{ product.data.description_short }}</p>
			</div>
		</div>
	</a>
	{%- endfor -%}

	<div class="space"></div>
</main>

<a class="chat" href="javascript:void(Tawk_API.toggle())"><i class="fas fa-comment"></i></a>
<script src="/scripts/chat.js" type="text/javascript"></script>
